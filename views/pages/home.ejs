<%- contentFor('body') %>
<div class="container" >
  <div class="row">
    <div class="col"></div>
    <div class="col">
        <form action="/" method="POST" enctype="multipart/form-data">

        <div class="mb-3">
          <label for="img" class="form-label">Selecione seu BackGroud</label>
          <input type="file" class="form-control" id="image" name="image" value="" required/>
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Qual o seu projeto?</label>
            <input type="text" class="form-control" id="name" value="" name="name" required />
          </div>
        <div class="mb-3">
          <input class="btn btn-primary mb-3" type="submit" value="Enviar" />
        </div>
        </form>
    </div>
    <div class="col"></div>
    </div>
    <div class="row">
        <div>
            <% items.forEach(function(image) { %>
            <div>
                <div class="col-md-12 text-center" style="background-color: #969494">
                    <img width="20%"  src="data:image/<%=image.img.contentType%>;base64,
                         <%=image.img.data.toString('base64')%>">
                    <div>
                        <h5><%= image.name %></h5>
                         
     
    <p><%= image.desc %></p>
     
     
     
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
  </div>
</div>
